<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.edcan.safood">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Noactionbar">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AuthActivity" />
        <activity android:name=".activity.RecentActivity" />
        <activity android:name=".activity.TutorialActivity" />
        <activity android:name=".activity.DetailViewActivity" />
        <activity android:name=".activity.FoodDicActivity" />
        <activity android:name=".activity.SearchHistoryActivity" />
        <activity android:name=".activity.SearchActivity" />
    </application>

</manifest>